<head>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
</head>
<div class="left">
    <div class="sidenav">
        <a routerLink="/" routerLinkActive="active" style="margin-top: 20%;color: white;font-size: 18px;">Home</a>
        <a routerLink="/Start2" routerLinkActive="active" style="color: white;font-size: 18px;">Trader Control</a>
        <a [routerLink] (click)="ShowReport()" style="color: white;font-size: 18px;"> Reports</a>
        <div *ngIf="Report">
            <ul *ngFor="let report of ReportData">
                <li style="color: white;">
                    <p style="text-decoration: none;">
                        {{report.name}}
                    </p>
                </li>
            </ul>
        </div>

    </div>
</div>

<div class="right" style="margin-left: 20%;">
    <div style="font-size: x-large;">
        My Profile<br><br>
        <div style="display: inline-block;margin-right: 20%">
            <i class='far fa-user' style='font-size:24px'></i>
            &nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-user" style="margin-right: 10px;font-size: 50px;"></span>
        </div>

        <div style="display: inline-block;">
            {{UserDetails[0][2]}} &nbsp; &nbsp; {{UserDetails[0][3]}}
            <br><br>
            <table>
                <tr>
                    <td>Email</td>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </td>
                    <td>{{UserDetails[0][5]}}</td>
                </tr>
                <!-- <tr>
                    <td>User Access</td>
                    <td> &nbsp;</td>
                    <td>{{UserDetails[0][1]}}</td>
                </tr> -->
                <tr>
                    <td>ID</td>
                    <td> &nbsp;</td>
                    <td>{{UserDetails[0][0]}}</td>
                </tr>
                <tr>
                    <td>Phone</td>
                    <td>&nbsp; </td>
                    <td>{{UserDetails[0][4]}}</td>
                </tr>
            </table>

        </div>

    </div>
</div>
<router-outlet></router-outlet>